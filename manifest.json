{
  "manifest_version": 2,

  "name": "RAMS",
  "description": "Chrome extension for RAMS!",
  "version": "1.0",

  "browser_action": {
    "default_title": "RAMS",
    "default_icon": "./front/images/file-sharing.png"
    // "default_popup": "./front/background.html"
  },
  "background": {
    "scripts": ["./front/background.js"]
    // "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost/*",
    "tabs",
    "background"
  ]
}
